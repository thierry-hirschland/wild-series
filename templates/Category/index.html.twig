{% extends "base.html.twig" %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1> Toutes les catégories des programmes : </h1>
    
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            {# Lien vers les séries de la catégory : #}
            <a href="{{ path("category_show", { id: category.id }) }}">Voir les séries</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
