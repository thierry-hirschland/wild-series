{% extends "base.html.twig" %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
    <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
    <div class="media-body">
        <h1 class="mt-0">{{ program.title }}</h1>
        <p>{{ program.summary }}</p>
        <h2>Catégorie : {{ program.category.name }}</h2>
        <h3>Saison: {{ season.number }} Année de sortie: {{ season.year }}</h3>
        <p>{{ season.description }}</p>
        <h4>Episode: {{ episode.number }} Titre: {{ episode.title }}</h4>
        <p>{{ episode.synopsis }}</p>
        <a href="{{ path("program_season_show", {"program": program.id, "season": season.id })}}">
            Retour à la liste des épisodes
        </a>
    </div>
    
</div>

{% endblock %}